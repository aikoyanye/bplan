<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="基于3S模式的宝贝计划APP"
        android:textColor="@color/title_text"
        android:textSize="18dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_cc" />
    <TextView
        android:id="@+id/tv_phone_login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="加入宝宝计划"
        android:textColor="@color/title_text" />
    <View
        android:id="@+id/view_register"
        android:layout_width="134dp"
        android:layout_height="2dp"
        android:layout_alignLeft="@id/tv_phone_login"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@id/tv_phone_login"
        android:background="@color/underline"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/ll_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/text_bge">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="17dp"
                android:layout_toStartOf="@+id/tv_phone_code"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:hint="  请输入手机号作为登录凭证"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=""
                android:textColor="@color/title_text"
                android:textColorHint="@color/text_bb"
                android:textSize="16dp"
                android:drawableLeft="@drawable/email"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/text_bge">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="17dp"
                android:layout_toStartOf="@+id/tv_phone_code"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:hint="  请输入家长姓名"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=""
                android:textColor="@color/title_text"
                android:textColorHint="@color/text_bb"
                android:textSize="16dp"
                android:drawableLeft="@drawable/user"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/text_bge">

            <EditText
                android:id="@+id/et_role"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="17dp"
                android:layout_toStartOf="@+id/tv_phone_code"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:hint="  请输入家长职业"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=""
                android:textColor="@color/title_text"
                android:textColorHint="@color/text_bb"
                android:textSize="16dp"
                android:drawableLeft="@drawable/user"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/text_bge">
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:hint="  请设置登录密码"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=""
                android:textColor="@color/title_text"
                android:textColorHint="@color/text_bb"
                android:textSize="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/password"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/text_bge">
            <EditText
                android:id="@+id/et_password2"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:hint="  请确认输入密码"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=""
                android:textColor="@color/title_text"
                android:textColorHint="@color/text_bb"
                android:textSize="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/password"/>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/register_tosubmit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_sumbit"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/rs_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="已有账号"
        android:textColor="@color/underline"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="0dp"
            android:text="温馨提示：提交信息便示为同意宝贝计划APP用户条款"
            android:textColor="@color/otherlogin"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="0dp"
            android:gravity="center"
            android:padding="0dp"
            android:text="注册宝贝计划帐号成为社区会员"
            android:textColor="@color/otherlogin"
            android:textSize="12dp" />

    </LinearLayout>


    //以下是其他登录方式

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="25dp"
        android:paddingTop="15dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@color/text_cc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="0dp"
            android:gravity="center"
            android:paddingBottom="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="0dp"
            android:text="微信登录方式"
            android:textColor="@color/otherlogin"
            android:textSize="14dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@color/text_cc" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_weixin"
            android:layout_width="72dp"
            android:layout_height="68dp"
            android:src="@drawable/ic_weixin" />
    </LinearLayout>
</LinearLayout>
