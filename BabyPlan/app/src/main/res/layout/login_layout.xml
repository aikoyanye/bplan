<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="妈妈乐"
        android:textColor="@color/title_text"
        android:textSize="18dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_cc" />
    <TextView
        android:id="@+id/tv_phone_login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="手机号快捷登录"
        android:textColor="@color/title_text" />
    <View
        android:id="@+id/view_phone"
        android:layout_width="134dp"
        android:layout_height="2dp"
        android:layout_alignLeft="@id/tv_phone_login"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@id/tv_phone_login"
        android:background="@color/underline"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/text_bge">


            <TextView
                android:id="@+id/tv_phone_code"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_login_code"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="获取验证码"
                android:textColor="@color/underline"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/et_phone_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=""
                android:textColor="@color/title_text"
                android:textColorHint="@color/text_bb"
                android:textSize="16dp"
                android:layout_alignBaseline="@+id/tv_phone_code"
                android:layout_alignBottom="@+id/tv_phone_code"
                android:layout_alignParentStart="true" />
        </RelativeLayout>




        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/text_bge">
            <EditText
                android:id="@+id/et_phone_code"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=""
                android:textColor="@color/title_text"
                android:textColorHint="@color/text_bb"
                android:textSize="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />
            </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_tologin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_sumbit"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="找回密码"
        android:textColor="@color/underline"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="0dp"
            android:text="温馨提示：未注册妈妈乐帐号的手机号，登录时将自动"
            android:textColor="@color/otherlogin"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="0dp"
            android:gravity="center"
            android:padding="0dp"
            android:text="注册妈妈乐帐号成为社区会员"
            android:textColor="@color/otherlogin"
            android:textSize="12dp" />

    </LinearLayout>


    //以下是其他登录方式

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="25dp"
        android:paddingTop="15dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@color/text_cc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="0dp"
            android:gravity="center"
            android:paddingBottom="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="0dp"
            android:text="微信登录方式"
            android:textColor="@color/otherlogin"
            android:textSize="14dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@color/text_cc" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_weixin"
            android:layout_width="72dp"
            android:layout_height="68dp"
            android:src="@drawable/ic_weixin" />
        </LinearLayout>
</LinearLayout>
