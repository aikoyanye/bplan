<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff" >
    <ImageView
        android:id="@+id/address_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/address"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="12dip"
        android:layout_marginRight="10dip"/>
    <TextView
        android:id="@+id/receiver"
        android:layout_toRightOf="@id/address_icon"
        android:text="张嘉豪"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/address_icon"
        android:textSize="15sp"/>
    <TextView 
        android:id="@+id/telephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13249709583"
        android:layout_toRightOf="@id/receiver"
        android:layout_alignTop="@id/receiver"
        android:textSize="15sp"
        android:layout_marginLeft="10dip"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/address_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="广东省惠州市博罗县龙溪镇龙岗大道329号"
        android:layout_below="@id/receiver"
        android:textSize="12sp"
        android:layout_alignLeft="@id/receiver"
        android:layout_marginTop="8dip"
        android:textColor="#878787"/>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="#C9C9C9" 
        android:layout_below="@id/address_detail"
        android:layout_marginTop="12dip"/>
   <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_below="@id/view"
        android:gravity="center_vertical">
        <CheckBox
        android:id="@+id/address_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginTop="7dip"
        android:button="@drawable/address_checkbox"
        android:checked="false"
        android:textColorHint="#000000"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dip"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:text="设为默认"
        android:textColor="#000000"
        android:paddingLeft="22dip" />

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/address_delete_layout"
        android:layout_alignParentRight="true">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@mipmap/address_delete"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="删除"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginRight="10dip"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/address_edit_layout"
        android:layout_toLeftOf="@id/address_delete_layout">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@mipmap/address_edit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="12sp"
            android:text="编辑"
            android:layout_marginRight="10dip"/>
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>