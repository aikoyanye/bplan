<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:background="#ffffff"
         android:orientation="vertical">
        <TextView
            android:id="@+id/mine_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的"
            android:textColor="#000000"
            android:textSize="18dp" />  
        <ImageButton   
            android:id="@+id/top_close"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"  
            android:background="@mipmap/closebtn"
            android:layout_centerVertical="true"  
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"/>   
    </RelativeLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="#C9C9C9" />
    <RelativeLayout
        android:id="@+id/information"
        android:layout_width="match_parent"
        android:layout_height="140dip">
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张嘉豪很厉害哇哇哇"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="45dip"/>
        <TextView
            android:id="@+id/edit_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看并编辑个人资料"
            android:layout_marginTop="10dip"
            android:layout_below="@id/username"
            android:layout_alignLeft="@id/username"
            android:textSize="12sp"/>
        <ImageView
            android:id="@+id/head_portrait"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dip"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dip"
        android:background="#EBEBEB" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="120dip"
        android:orientation="vertical">
        <RelativeLayout  
            android:layout_width="match_parent"  
            android:layout_height="42dp"  
            android:background="#FFFFFF" >  
            <TextView  
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content"  
                android:layout_marginLeft="20dp"  
                android:text="我的订单"  
                android:layout_centerVertical="true"  
                android:textColor="#000000"  
                android:textSize="15sp"/>  
            <TextView   
                android:id="@+id/view_all_indents"  
                android:layout_width="wrap_content"  
                android:layout_height="match_parent"
                android:text="查看全部订单"  
                android:gravity="center"  
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textSize="12sp"/>   
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="#EBEBEB"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="10dip">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:id="@+id/wait_for_payment"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:text="待付款"
                    android:drawableTop="@mipmap/wait_for_payment"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:textColor="#000000"
                    android:drawablePadding="10dp"/>
                <TextView
                    android:id="@+id/wait_for_sending"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:text="待发货"
                    android:drawableTop="@mipmap/wait_for_sending"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:textColor="#000000"
                    android:drawablePadding="10dp"/>
                <TextView
                    android:id="@+id/wait_for_goods"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:text="待收货"
                    android:drawableTop="@mipmap/wait_for_goods"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:textColor="#000000"
                    android:drawablePadding="10dp"/>
                <TextView
                    android:id="@+id/wait_for_evaluate"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:text="待评价"
                    android:drawableTop="@mipmap/wait_for_evaluate"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:textColor="#000000"
                    android:drawablePadding="10dp"/>
                <TextView
                    android:id="@+id/after_sales_service"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:text="售后服务"
                    android:drawableTop="@mipmap/after_sales_service"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:textColor="#000000"
                    android:drawablePadding="10dp"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dip"
        android:background="#EBEBEB" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout  
            android:layout_width="match_parent"  
            android:layout_height="42dp"  
            android:background="#FFFFFF" >  
            <TextView  
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content"  
                android:layout_marginLeft="20dp"  
                android:text="我的服务"  
                android:layout_centerVertical="true"  
                android:textColor="#000000"  
                android:textSize="15sp"/>  
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="#EBEBEB"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip" />
    </LinearLayout>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:gravity="center"
            android:paddingTop="10dip">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingTop="0dip">
                <TextView
                    android:id="@+id/collect"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:text="收藏"
                    android:drawableTop="@mipmap/collect"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:textColor="#000000"
                    android:drawablePadding="10dp"/>
                <TextView
                    android:id="@+id/address"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:text="地址"
                    android:drawableTop="@mipmap/address"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:textColor="#000000"
                    android:drawablePadding="10dp"/>
                <TextView
                    android:id="@+id/suggestion_feedback"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:text="意见反馈"
                    android:drawableTop="@mipmap/suggestion_feedback"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:textColor="#000000"
                    android:drawablePadding="10dp"/>
                <TextView
                    android:id="@+id/about_us"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:text="关于我们"
                    android:drawableTop="@mipmap/about_us"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:textColor="#000000"
                    android:drawablePadding="10dp"/>
            </TableRow>
        </TableLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="6dip"
            android:background="#EBEBEB" />
        </LinearLayout>
        </ScrollView>
</LinearLayout>
