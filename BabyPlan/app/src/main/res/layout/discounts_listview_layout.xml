<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dip"
    android:background="#ffffff" >
    <ImageView 
        android:id="@+id/discounts_ItemImage"
        android:layout_width="140dip"
        android:layout_height="186dip"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/goods"
        android:layout_marginLeft="10dip"/>
    <TextView
        android:id="@+id/discounts_ItemName"
        android:layout_width="140dip"
        android:layout_height="50dip"
        android:text="nameaaaaaaaaaaaa"
        android:lines="2"
        android:ellipsize="end"
        android:layout_toRightOf="@id/discounts_ItemImage"
        android:layout_marginLeft="25dip"
        android:layout_marginTop="30dip"
        android:layout_marginRight="30dip"
        android:textSize="17sp"
        android:textColor="#000000"/>
    <TextView 
        android:id="@+id/discounts_NewItemPrice"
        android:layout_width="60dip"
        android:layout_height="20dip"
        android:text="￥30.0"
        android:layout_below="@id/discounts_ItemName"
        android:layout_toRightOf="@id/discounts_ItemImage"
        android:layout_marginRight="5dip"
        android:layout_marginLeft="25dip"
        android:layout_marginTop="15dip"
        android:textColor="#FF0000"
        android:textSize="15sp"/>
    <TextView 
        android:id="@+id/discounts_OldItemPrice"
        android:layout_width="60dip"
        android:layout_height="20dip"
        android:text="￥60.0"
        android:layout_below="@id/discounts_ItemName"
        android:layout_toRightOf="@id/discounts_NewItemPrice"
        android:layout_marginRight="10dip"
        android:layout_marginTop="15dip"
        android:textColor="#C5C1AA"
        android:textSize="14sp"/>
</RelativeLayout>
