<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="10dip" >
    <ImageView
        android:id="@+id/goods_category_gridview_item_imageview"
        android:layout_width="140dip"
        android:layout_height="186dip"
        android:layout_gravity="center"
        android:src="@mipmap/goods"/>
    <TextView 
        android:id="@+id/goods_category_gridview_item_feature"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxEms="10"
        android:textSize="12sp"
        android:textColor="#FF4500"
        android:text="轻松免手洗，一泡就干净"
        android:layout_below="@id/goods_category_gridview_item_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"/>
    <TextView
        android:id="@+id/goods_category_gridview_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxEms="8"
        android:text="衣物泡洗颗粒通用装 O2泡"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_below="@id/goods_category_gridview_item_feature"
        android:layout_marginTop="8dip"/>
    <TextView
        android:id="@+id/goods_category_gridview_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13.0"
        android:textColor="#ff0000"
        android:layout_below="@id/goods_category_gridview_item_name"
        android:layout_marginTop="8dip"/>
</RelativeLayout>