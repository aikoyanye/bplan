<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <ImageView
        android:id="@+id/indents_goods_imageview"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:layout_marginLeft="16dip"
        android:layout_marginTop="16dip"
        android:layout_marginBottom="16dip"
        android:src="@mipmap/goods" />
    <TextView
        android:id="@+id/indents_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/indents_goods_imageview"
        android:layout_alignTop="@id/indents_goods_imageview"
        android:text="这是一个好东西好东西好东西"
        android:textSize="14sp"
        android:textColor="#000000"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxEms="8"
        android:layout_marginLeft="10dip"/>
    <TextView
        android:id="@+id/indents_goods_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x1"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/indents_goods_name"
        android:layout_marginRight="16dip"/>
    <TextView
        android:id="@+id/indents_goods_attr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="灰色"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_below="@id/indents_goods_name"
        android:layout_alignLeft="@id/indents_goods_name"
        android:layout_marginTop="10dip"/>
    <TextView
        android:id="@+id/indents_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥198"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_alignBottom="@id/indents_goods_imageview"
        android:layout_alignLeft="@id/indents_goods_name"/>
</RelativeLayout>