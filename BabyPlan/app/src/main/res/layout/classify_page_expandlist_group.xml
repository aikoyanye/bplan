<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >
    <TextView
        android:id="@+id/classify_page_expandlist_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="精选分类"
        android:textSize="16sp"
        android:textColor="#000000"
        android:padding="10dip"
        android:drawablePadding="10dip"/>
    <ImageView
        android:id="@+id/classify_page_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/classify_page_expandlist_group_name"
        android:src="@mipmap/classify_page_close"
        android:layout_alignBottom="@id/classify_page_expandlist_group_name"
        android:layout_alignTop="@id/classify_page_expandlist_group_name"/>
</RelativeLayout>