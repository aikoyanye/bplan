<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:id="@+id/indent_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号"
            android:textColor="#9E9E9E"
            android:textSize="13sp"
            android:layout_marginLeft="16dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"/>
        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/order_id_tv"
            android:text="20000000167930"
            android:textSize="13sp"
            android:textColor="#9E9E9E"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"/>
        <TextView
            android:id="@+id/order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="订单已取消"
            android:textColor="#9E9E9E"
            android:textSize="13sp"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:layout_marginRight="16dip"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="#9E9E9E"
            android:layout_alignLeft="@id/order_id_tv"
            android:layout_alignRight="@id/order_type"
            android:layout_below="@id/order_id"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/indent_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/indent_top"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdassafasfsaf"
            android:textColor="#000000"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="#9E9E9E"
        android:layout_alignLeft="@id/indent_middle"
        android:layout_alignRight="@id/indent_middle"
        android:layout_below="@id/indent_middle"/>
    <LinearLayout
        android:id="@+id/indent_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/indent_middle"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共 "
            android:textColor="#000000"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/indent_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="#000000"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 件商品"
            android:textColor="#000000"
            android:textSize="13sp"
            android:paddingRight="20dip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计：￥"
            android:textColor="#000000"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/intent_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:textSize="13sp"
            android:textColor="#000000"/>
    </LinearLayout>
</RelativeLayout>